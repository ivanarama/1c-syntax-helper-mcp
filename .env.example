# Переменные окружения для MCP сервера синтаксис-помощника 1С

# Elasticsearch настройки (замените IP на адрес компьютера с Docker)
ELASTICSEARCH_HOST=http://elasticsearch
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_INDEX=help1c_docs
ELASTICSEARCH_TIMEOUT=30
ELASTICSEARCH_MAX_RETRIES=3

# MCP сервер настройки
SERVER_HOST=0.0.0.0
SERVER_PORT=8002
LOG_LEVEL=INFO
MAX_CONCURRENT_REQUESTS=8

# Пути к данным
HBK_DIRECTORY=./data/hbk
LOGS_DIRECTORY=./data/logs

# Настройки индексации
INDEX_BATCH_SIZE=100
REINDEX_ON_STARTUP=true

# Настройки поиска
SEARCH_MAX_RESULTS=50
SEARCH_TIMEOUT_SECONDS=30
